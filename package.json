{
  "name": "steamkey.trade",
  "description": "SteamKey.Trade",
  "homepage": "https://steamkey.trade",
  "bugs": "https://github.com/Revadike/SteamKey.Trade/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/Revadike/SteamKey.Trade.git"
  },
  "author": {
    "name": "Revadike",
    "email": "revadike@outlook.com",
    "url": "https://revadike.com"
  },
  "contributors": [
    "https://github.com/Revadike/SteamKey.Trade/graphs/contributors"
  ],
  "license": "AGPL-3.0-or-later",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:local": "node -e \"require('child_process').spawn('npx',['supabase','functions','serve','--env-file','./supabase/.env.local'],{stdio:'inherit',shell:true});require('child_process').spawn('npx',['nuxt','dev','--dotenv','.env.local'],{stdio:'inherit',shell:true})\"",
    "dev:prod": "nuxt dev --dotenv .env.prod",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:status": "supabase status",
    "supabase:reset": "supabase db reset",
    "supabase:pull": "supabase db pull --local && supabase migration up --local",
    "supabase:diff": "supabase stop && supabase db diff -f patch && supabase start",
    "supabase:push": "supabase db push --local",
    "supabase:deploy": "supabase functions deploy && supabase secrets set --env-file ./supabase/.env.prod && supabase db push",
    "supabase:dump": "supabase db dump -f supabase/seed.sql --data-only && supabase db dump -f supabase/schema.sql -s public --keep-comments --local",
    "supabase:populate": "deno run --env-file=\".env.local\" --env-file=\"./supabase/.env.local\" --allow-all --unstable-detect-cjs --import-map=\"./supabase/functions/import_map.json\" \"./supabase/functions/database-update/index.js\"",
    "cache:clear": "node -e \"['.nuxt','node_modules/.cache'].forEach(p=>require('fs').rmSync(p,{recursive:true,force:true}))\"",
    "git:merge": "git checkout master && git pull origin master && git merge develop && git push origin master && git checkout develop",
    "lint": "eslint . && supabase db lint",
    "lint:fix": "eslint . --fix",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "deploy": "npm run git:merge && npm run supabase:deploy"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@nuxtjs/supabase": "^1.5.1",
    "@pinia/nuxt": "^0.11.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "cropperjs": "1.6.2",
    "fuse.js": "^7.1.0",
    "json-to-csv-export": "^3.1.2",
    "jsonata": "^2.0.6",
    "lodash": "^4.17.21",
    "pinia": "^3.0.2",
    "pinia-plugin-persistedstate": "^4.3.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@nuxt/devtools": "^2.4.1",
    "@nuxt/eslint": "^1.4.0",
    "@nuxt/types": "^2.18.1",
    "@nuxtjs/google-fonts": "^3.2.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.27.0",
    "eslint-config-vuetify": "^4.0.0",
    "eslint-plugin-vue": "^10.1.0",
    "nuxt": "^3.17.3",
    "sass": "^1.89.0",
    "supabase": "^2.22.12",
    "vite-plugin-vuetify": "^2.1.1",
    "vue": "^3.5.14",
    "vue-eslint-parser": "^10.1.3",
    "vue-router": "^4.5.1",
    "vuetify": "^3.8.5"
  },
  "resolutions": {
    "cookie": "0.7.2"
  },
  "browser": {
    "crypto": false
  }
}